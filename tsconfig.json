{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "node",
        "strict": true,
        // "noImplicitAny": false, // 是否在表达式和声明上有隐含的any类型时报错
        "jsx": "preserve",
        "jsxImportSource": "vue",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "lib": ["es2020", "dom"],
        "skipLibCheck": true
    },
    "include": ["src/**/*", "src/**/*.vue"],
    "exclude": ["node_modules"]
}
